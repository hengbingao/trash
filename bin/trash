#!/usr/bin/env bash

script_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")/../src" && pwd)"

show_help() {
    echo "trash - Manage trash files"
    echo
    echo "Usage:"
    echo "  trash go <files...>      Move specified files to $MYGROUP/trash"
    echo "  trash clean             Clean all files under $MYGROUP/trash"
    echo "  trash -h|--help         Show this help message"
}

if [[ $# -eq 0 ]]; then
    show_help
    exit 1
fi

case $1 in
    go)
        shift
        "$script_dir/trash_go.sh" "$@"
        ;;
    clean)
        "$script_dir/trash_clean.sh"
        ;;
    -h|--help)
        show_help
        ;;
    *)
        echo "Unknown command: $1"
        show_help
        exit 1
        ;;
esac
